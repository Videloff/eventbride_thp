<center>
  <div class="white-txt">
    <h1>Profil de : <%= @user.first_name %> <%= @user.last_name %></h1>
    <p><%= @user.email %></p>
    <p><%= @user.description %></p>
    <br><br>


    <!-- edit des infos user -->
    <%= link_to "Editer le profil", edit_user_path(@user.id), class: "btn btn-dark gradient-button m-3" %>

    <!-- les gossips de l'user -->
    <div class="container">
    <div class="row">
      <% @events.sort.each do |ev| %>
        <% if ev.admin_id == @user.id %>
          <div class="col-md-3" style="margin-top: 6%; margin-bottom: 6%" >
            <div class="card-sl">
              <div class="card-heading card-txt">
                <%= ev.title %>
              </div>
              <div class="card-text card-txt">
                par <%= link_to "#{ev.admin.first_name}", user_path(ev.admin.id) %>
              </div>
              <div class="card-text card-txt">
                <%= ev.description %>
              </div>
              <div class="card-text card-txt">
                <h6><%= ev.price %>â‚¬</h6>
              </div>
              <%= link_to "Voir l'event", event_path(ev.id), :class=>"btn btn-dark gradient-button" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div> 
  </div>
</center>
