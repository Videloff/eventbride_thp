<center>
  <div class="white-txt">
    <h2 class="white-txt">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, :class=>"white-txt" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, :class=>"white-txt" %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, :class=>"white-txt" %>
        </div>
      <% end %>
      <br>
      <div class="actions">
        <%= f.submit "Log in", :class=>"btn btn-dark gradient-button" %>
      </div>
    <% end %>

    <div class="my_link"><%= render "devise/shared/links", :class=>"my_link" %></div>
  </div>
</center>
